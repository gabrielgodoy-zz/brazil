webfont('garibaldi', 'Garibaldi-Medium', true, 'normal')

body
  p,
  li
    font-size 1.6rem

    +below(medium)
      font-size 1.8rem

  h1, h2, h3, h4, h5
    font-family 'garibaldi'

  h3, h4, h5
    color text

  h1, h2
    font-size 4rem

    +below(medium)
      font-size: 3rem

  h3
    font-size 2.8rem

    +below(medium)
      font-size: 2.2rem

  h4
    font-size 2.5rem

    +below(medium)
      font-size: 1.8rem

  h5
    font-size 2rem
    color lighten(text, 15%)

    +below(medium)
      font-size: 1.6rem
