.layer-dot
  circle
    cursor: pointer
    opacity: .2
    fill brazilGreen
    transition opacity .2s

    &:hover
      opacity: 1

svg .layer-active
  opacity: 1

.layer-guideline
  opacity: 0
  transition opacity .2s
  pointer-events none

  .guideline
    stroke #ddd
    stroke-width 1
    stroke-dasharray: 5

.layer-tooltip
  pointer-events none
  transition opacity .2s
  opacity: 0

  .layer-tooltip-box
    fill white

  .layer-tooltip-year
    font-size 1.8rem
    font-family 'garibaldi'
    fill brazilGreen

  .layer-tooltip-population
    font-size 1.2rem

.axis-title
  font-size 1rem
  fill text

.graph-axis
  line,
  .domain
    stroke text

  text
    fill text
