.loader
  border: 3px solid darken(almostWhite, 10%)
  border-top: 3px solid flatBlue
  display: inline-block
  border-radius: 50%
  width: 20px
  height: 20px
  animation: spin 1s linear infinite
  margin-right: 5px
  vertical-align: middle

@keyframes spin {
  0% {
    transform: rotate(0deg)
  }
  100% {
    transform: rotate(360deg)
  }
}
